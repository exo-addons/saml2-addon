<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>exo-saml-plugin</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <directory>${project.build.directory}/sso-packaging.zip/gatein-sso-${org.gatein.sso.version}/saml</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <useDefaultExcludes>false</useDefaultExcludes>
      <directory>${project.basedir}/src/main/resources/idp-sig-module</directory>
      <outputDirectory>/idp-sig-module</outputDirectory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>/idp-sig-module/modules/org/picketlink/gatein</outputDirectory>
      <includes>
        <include>org.picketlink:picketlink-common</include>
        <include>org.picketlink:picketlink-config</include>
        <include>org.picketlink:picketlink-federation</include>
        <include>org.picketlink.distribution:picketlink-jbas7</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>